<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic2"
    android:orientation="vertical"
    tools:context="com.example.final_project_a.MainActivity">


    <TextView
        android:id="@+id/networknametv"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Switch
            android:id="@+id/switchwifi"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"

            />
        <Button
            android:layout_marginLeft="82dp"
            android:id="@+id/connectStatusButton"

            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#ff0004"
            android:gravity="center_horizontal"
            android:text="Status" />

    </LinearLayout>


    <Button
        android:id="@+id/ipAddressButton"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Show ip" />

    <Button
        android:id="@+id/LinkSpeedButton"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="speed" />


    <Button
        android:id="@+id/ScanButton"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Scan My Network" />

    <!--<TextView-->
        <!--android:id="@+id/ipaddress"-->
        <!--android:layout_width="170dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:gravity="center_horizontal" />-->

    <Button
        android:text="change Router password"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"

        />

    <Button
        android:id="@+id/checkpass"
        android:layout_marginTop="20dp"
        android:text="check your password"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        />


</LinearLayout>
